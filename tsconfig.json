{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "allowJs": true,
        "target": "es5",
        "lib": ["dom", "es2015"],
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*",
        "declarations.d.ts",
        "tests"
    ]
}
